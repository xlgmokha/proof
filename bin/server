#!/bin/sh

# bin/server: Launch the application and any extra required processes locally.

set -e
cd "$(dirname "$0")/.."

PORT=${PORT:=3000}
PROCFILE=Procfile

export PORT

test -z "$RACK_ENV" && RACK_ENV='development'
bin/update

gem install foreman --conservative
foreman start -e /dev/null -f $PROCFILE
